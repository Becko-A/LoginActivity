<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/kong"
        android:background="@drawable/logo"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/kong"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_above="@+id/accountlayout"/>
    <LinearLayout
        android:id="@+id/accountlayout"
        android:orientation="horizontal"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_above="@+id/passwordlayout"

        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="#fff"
            android:text="账号：" />

        <EditText
            android:id="@+id/account"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/edittext" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/passwordlayout"
        android:orientation="horizontal"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="#fff"
            android:text="密码："/>

        <EditText
            android:id="@+id/password"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/edittext"
            android:inputType="textPassword" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rem"
        android:orientation="horizontal"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/passwordlayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/rem_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#fff"
                android:text="记住密码"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="                                  "/>
            <TextView
                android:id="@+id/forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="18sp"
                android:textColor="#fff"
                android:text="忘记密码"/>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/login"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_below="@+id/rem"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:text="登   录"
        android:background="@drawable/button"/>
    <LinearLayout
        android:id="@+id/xiakong"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/login"/>
    <TextView
        android:id="@+id/zhuce"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/xiakong"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:textColor="#fff"
        android:text="注 册 账 号"/>


</RelativeLayout>